<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.realworldproject.group03.rashdetecter.RegisterPatient">

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="30sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/raceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Race"
        android:textSize="30sp"
        android:layout_below="@+id/genderLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/conditionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Condition ID"
        android:textSize="30sp"
        android:layout_below="@+id/ageLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/ageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="Age"
        android:textSize="30sp"
        android:layout_below="@+id/genderLabel"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/patientSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/conditionLabel"
        android:layout_marginTop="71dp"
        android:text="Submit" />

    <Spinner
        android:id="@+id/ageSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_alignBottom="@+id/ageLabel"
        android:layout_toEndOf="@+id/ageLabel"
        android:layout_alignTop="@+id/ageLabel" />

    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/genderLabel"
        android:spinnerMode="dialog"
        android:layout_above="@+id/raceSpinner" />

    <Spinner
        android:id="@+id/raceSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/raceLabel"
        android:layout_toEndOf="@+id/raceLabel"
        android:layout_below="@+id/genderLabel" />

    <Spinner
        android:id="@+id/conditionSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patientSubmit"
        android:layout_alignTop="@+id/conditionLabel"
        android:layout_toEndOf="@+id/conditionLabel" />
</RelativeLayout>
