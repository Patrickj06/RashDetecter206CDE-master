<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.realworldproject.group03.rashdetecter.HelpPage">

    <TextView
        android:id="@+id/DisclaimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Disclaimer: Any diagnosis is only provisional"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/HelpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DisclaimerTextView"
        android:text="On this app you will be asked various Yes/No questions about aspects of your Rash. Any Patient information that is produced can be stored with the Patient Database for later analysis."
        android:textSize="24sp" />
</RelativeLayout>
