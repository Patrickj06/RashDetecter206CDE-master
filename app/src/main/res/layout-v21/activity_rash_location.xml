<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.realworldproject.group03.rashdetecter.RashLocation"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/face_chest"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="Face and chest"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_below="@+id/blowerLegs"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/blowerLegs"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Lower legs" />

    <Button
        android:id="@+id/everywhere"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:text="everywhere"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:layout_below="@+id/bElbow"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bElbow"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="elbows" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Where is the location of the rash?"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>
